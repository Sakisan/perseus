@require '_includes/*'

*
  box-sizing: border-box

body
  // background black
  background #BF9750
  color white
  margin 0
  padding 0

.layer
  height 100vh
  width 100vw
  position absolute
  top 0
  left 0
  text-align: center;

video
  display none

#hoofd
  height 80vh
  margin auto

#medals
  .l-row
    height 33vh
    padding-top 8vh

    img
      height 16vh
    img.text
      height 20vh
      position absolute
      margin-top -2vh
      margin-left -5vh
    img.crown
      height 100vh
      position absolute
      top 0
      left 0
    img.crown.sword
      // margin-left -8vw
      height 30vh
      left 80vw
      top 0
      transition left 4s
    img.crown.sword.goleft
      left 0

#applause
  background url(../img/APPLAUSE-oo.png)
